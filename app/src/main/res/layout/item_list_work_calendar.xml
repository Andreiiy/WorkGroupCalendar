<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:id="@+id/dateLayaut"
        android:layout_width="58dp"
        android:layout_height="75dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tv_weekday"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center_horizontal"
            android:text="SUN"
            android:fontFamily="monospace"
            android:textSize="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:fontFamily="monospace"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">


            <TextView
                android:id="@+id/tv_titleShift"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="@string/tv_shift"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textSize="8sp"
                android:textColor="@color/colorAccentGreenLite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                />
            <TextView
                android:id="@+id/tv_numberShift"
                style="@style/TextAppearance.AppCompat.Title"
                android:fontFamily="monospace"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">


            <TextView
                android:id="@+id/tv_titleTimeShift"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="@string/tv_time"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textSize="7sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                />
            <TextView
                android:id="@+id/tv_timeShift"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="0"
                android:fontFamily="monospace"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="7sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_titleAddTime"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:fontFamily="monospace"
                android:text="@string/tv_Addtime"
                android:textColor="@color/colorRed"
                android:textSize="7sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Addtime"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorRed"
                android:textSize="6sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>