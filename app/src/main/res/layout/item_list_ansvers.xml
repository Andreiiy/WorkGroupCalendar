<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/titleVacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/titleVacation"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorVioletDark"
            android:textSize="44dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:paddingLeft="10dp"
            android:text="24/5 - 25/04/2020"
            android:textColor="@color/colorBlueDark"
            android:textSize="24dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvApproved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:text="@string/titleApproved"
            android:textColor="@color/colorPrimary"
            android:textSize="34dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/ivAnsver"
            android:layout_width="187dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorBlueDark"
            android:textSize="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReasonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:paddingLeft="20dp"
            android:textSize="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>